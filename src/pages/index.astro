---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Graycot.dev">
	<main>
		<h1>hello! i'm <span class="text-gradient">graycot</span></h1>
		<p class="intro">
			welcome to <code>https://graycot.dev</code>
		</p>
		<ul role="list" class="link-card-grid">
			<Card
			href="https://docs.graycot.dev/s/t_fQSSO8T#"
			title="projets"
			body="open-source and webdev"
			/>
			<Card
				href="https://docs.graycot.dev/s/9shAtxXSl#"
				title="guides"
				body="yunohost self-hosting guide, webdev beginner guides"
			/>
			<Card
				href="https://docs.graycot.dev/s/wqnMUy7dC#"
				title="tools"
				body="hosted server-side software for the benefit of the public"
			/>
			<Card
				href="https://docs.graycot.dev/s/ZI5MEUTej#"
				title="contact"
				body="here's how to find me"
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		color: #d5d5d5;
		text-align: center;
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.intro {
		font-size: 1.3em;
		text-align: center;
		line-height: 1.6;
		margin: 1rem 0;
		border: 3px solid rgba(var(--accent), 25%);
		background-color: rgba(90, 90, 90, 0.147);
		padding: 1rem;
		border-radius: 0.4rem;
	}

	.intro {
		color: #eeeeee;
	}
	.intro code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.intro strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
